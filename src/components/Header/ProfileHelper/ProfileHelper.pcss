.profile-helper{
  margin-right: 5rem;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: var(--sandDune);
  text-decoration: unset;
 
  &__name {
    font-family: var(--baseFont);
    font-style: normal;
    font-weight: 500;
    margin-left: 10px;
  }

  &__name:hover {
    text-decoration: underline;
    cursor: pointer;
  }
}